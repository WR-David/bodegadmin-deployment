<div class="container p-4">
	<div class="row">

		{{#each users}}
			<div class="col-md-3">
				<div class="card text-center">
					<div class="card-body">
						<a href="{{correo}}" target="_blank">
							<h3 class="card-title text-uppercase">
								{{nombre}}
							</h3>
						</a>
						<p class="m-2">{{rut}}</p>
						<p>{{timeago created_at}}</p>
						<a href="/links/delete/{{idUsuario}}" class="btn btn-danger">Eliminar Usuario</a>
						<a href="/links/edit/{{idUsuario}}" class="btn btn-secondary m-2">Editar</a>
					</div>
				</div>
			</div>
			{{else}}
			<div class="col-md-4 mx-auto">
				<div class="card card-body text-center">
					<p>No hay Usuarios</p>
				</div>
			</div>
		{{/each}}

	</div>
</div>