<div class="container p-4">
	<div class="row">
		<div class="col-md-4 mx-auto">
			<div class="card">
				<div class="card-body">
					<form action="/links/edit/{{user.idUsuario}}" method="POST">
						<div class="form-group">
							<input type="text" class="form-control" value="{{user.nombre}}" name="nombre" placeholder="Nombre">
						</div>
						<div class="form-group">
							<input type="text" class="form-control" value="{{user.apePat}}" name="apePat" placeholder="Apellido Paterno">
						</div>
						<div class="form-group">
							<input type="text" class="form-control" value="{{user.apeMat}}" name="apeMat" placeholder="Apellido Materno">
						</div>
						<div class="form-group">
							<input type="email" class="form-control" value="{{user.correo}}" name="correo" placeholder="Correo"></input>
						</div>
						<div class="form-group">
							<input type="text" class="form-control" value="{{user.rut}}" name="rut" placeholder="RUT"></input>
						</div>
						<div class="form-group">
							<input type="text" class="form-control" value="{{user.id_TUsuario}}" name="id_TUsuario" placeholder="Tipo de Usuario"></input>
						</div>
						<div class="form-group">
							<input type="text" class="form-control" value="{{user.estado}}" name="estado" placeholder="Tipo de Usuario"></input>
						</div>
						<div class="form-group">
							<button class="btn btn-success btn-block">Save</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>